{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5", // TODO (1/10/17): Use babel-plugin-uglify so we can bundle es6.
        "lib": ["es2016", "dom"], // TODO (8/23/17): Remove this line when moving to es6.
        "typeRoots": [
            "node_modules/@types"
        ],
        "experimentalDecorators": true // For the decorators in Mocha tests.
    },
    "compileOnSave": true,
    "include": [
        "src/**/*",
        "test/*"
    ]
}